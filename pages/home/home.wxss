page {
  background-color: rgba(183, 189, 189, 0.5);
}
.top{
  background-color: #ffb1cf;
  margin: auto;
  border-bottom-left-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
}
/* 搜索 */
.search{
  height: 80rpx;
  width: 88%;
  border-radius: 20rpx;
  margin: auto;
  background-color: rgb(41, 197, 132);
  margin-bottom: 10rpx;
}
/*swiper组件数据*/
.swiperAttribute{
  height: 200px;
  width: 97%;
  margin: auto;
  background-repeat: no-repeat;
}
.swiperAttribute image{
  width: 100%;
  height: 100%;
  border-radius: 20px;
}
/* 公告栏 */
.notice{
  margin: auto;
  width: 90%;
  opacity: 0.7;
  line-height: 50rpx;
  font-size: 32rpx;
  margin-top: 8rpx;
  border-radius: 14rpx;
  /* border: 1px solid red; */
  padding: 0 20rpx;
  overflow: hidden;
  white-space:nowrap;
  text-overflow: ellipsis;
}
/* 分割线 */
.partition{
  height: 10rpx;
}
/* 提示信息 */
.tip{
  margin: auto;
  text-align: center;
  display: table;
  width: 95%;
  color: red;
  margin-top: 14rpx;
  white-space: nowrap;
  border-spacing: 0.1rem 0;
}
.tip::after,.tip::before{
  display: table-cell;
  content: "";
  width: 50%;
  background: linear-gradient(#999999, #999999) repeat-x center;
  background-size: 100rem 0.2rem; 
  border-radius: 10rpx;
}

.tip>text{
  border: 1px solid green;
  border-radius: 10rpx;
  padding:0 20rpx;
}
/* 文章内容 */
.content{
  background-color: rgba(49, 128, 165, 0.5);
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: auto;
  margin-top: 14rpx;
  border-radius: 14rpx;
  justify-content: space-evenly;
  margin-bottom: 0;
}
/* .content navigator:nth-child(odd){
background-color: blanchedalmond;
