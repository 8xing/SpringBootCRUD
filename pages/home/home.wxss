.info{
  width: 46%;
  background-color: rgba(134, 122, 125, 0.685);
  height: 360rpx;
  display: flex;
  position: relative;
  flex-direction: column;
  margin: 10rpx 0;
  border-radius: 10rpx;
  overflow: hidden;
}
.title{
  padding: 0rpx 10px;
  border-bottom: 2px solid #999999;
  height: 66rpx;
  line-height: 66rpx;
  overflow: hidden;
  font-size: 36rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.article{
  height:205rpx;
  font-size: 30rpx;
  padding: 0 10rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:5;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
}
.person{
  height: 75rpx;
  margin-top: 5rpx;
  position: absolute;
  left: 0;
  width: 100%;
  bottom: 0;
  background-color: rgba(44, 160, 125,0.8);
  display: flex;
  flex-direction: row;
  border-top: 2px solid #999999;

}
.nick{
  line-height: 80rpx;
  margin-left: 10rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}
.img{
  display: flex;
  width: 70rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 14rpx;
}
.img>image{
  width: 60rpx;
  height: 60rpx;
border-radius: 50%;
border: 1px solid #999999;
}

/* 悬浮按钮 */
.wrap {
  position:fixed;
  bottom:10px;
  right: 10px;
  display:flex;
  width:60px;
  border-radius: 50%;
  height: 60px;
  justify-content:center;
}
.wrap image {
  /* width:50px;
  height:50px; */
  width: 100%;
  height: 100%;
}