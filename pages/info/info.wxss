page {
  background-color: rgba(183, 189, 189, 0.5);
}
.top{
  background-color: #ffb1cf;
  margin: auto;
  border-bottom-left-radius: 14rpx;
  border-bottom-right-radius: 14rpx;
}

/*swiper组件数据*/
.swiperAttribute{
  height: 200px;
  width: 97%;
  margin: auto;
  background-repeat: no-repeat;
}
.swiperAttribute image{
  width: 100%;
  height: 100%;
  border-radius: 20px;
}

/* 分割线 */
.partition{
  height: 10rpx;
}
/* 提示信息 */
.tip{
  margin: auto;
  text-align: center;
  display: table;
  width: 95%;
  color: red;
  margin-top: 14rpx;
  white-space: nowrap;
  border-spacing: 0.1rem 0;
}
.tip::after,.tip::before{
  display: table-cell;
  content: "";
  width: 50%;
  background: linear-gradient(#999999, #999999) repeat-x center;
  background-size: 100rem 0.2rem; 
  border-radius: 10rpx;
}

.tip>text{
  border: 1px solid green;
  border-radius: 10rpx;
  padding:0 20rpx;
}
